@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowler Contact Info</h1>

<a asp-controller="Home" asp-action="AddEditBowler">Add Bowler</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <td>Bowler ID</td>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>ZIP</td>
            <td>Phone</td>
            <td>Team ID</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerID</td>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.TeamID</td>
            </tr>
        }
    </tbody>
</table>
